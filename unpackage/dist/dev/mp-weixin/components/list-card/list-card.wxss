.listcard {
  display: flex;
  padding: 10px;
  margin: 10px;
  border-radius: 5px;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}
.listcard .card-img {
  flex-shrink: 0;
  width: 60px;
  height: 60px;
  border-radius: 5px;
  overflow: hidden;
}
.listcard .card-img image {
  width: 100%;
  height: 100%;
}
.listcard .card-content {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 10px;
  width: 100%;
}
.listcard .card-content .card-title {
  font-size: 14px;
  color: #333;
  font-weight: 400;
  line-height: 1.2;
  padding-right: 30px;
}
.listcard .card-content .card-title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /*设置为弹性盒子*/
  -webkit-line-clamp: 2;
  /*最多显示2行*/
  -webkit-box-orient: vertical;
}
.listcard .card-content .card-desc {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
.listcard .card-content .card-desc .card-label {
  display: flex;
  padding: 0 5px;
  margin-right: 5px;
  border-radius: 15px;
  color: #f07373;
  border: 1px solid #f07373;
}
.listcard .card-content .card-desc .card-reader {
  color: #999;
  line-height: 1.5;
}
.listcard.mode-column .card-content {
  width: 100%;
  padding-left: 0;
}
.listcard.mode-column .card-img {
  display: flex;
  height: 70px;
  width: 100%;
  margin-top: 10px;
}
.listcard.mode-column .card-img .img-item {
  margin-left: 10px;
  width: 100%;
  border-radius: 5px;
  overflow: hidden;
}
.listcard.mode-column .card-img .img-item:nth-child(1) {
  margin-left: 0;
}
.listcard.mode-column .card-img .img-item image {
  width: 100%;
  height: 100%;
}
.listcard.mode-column .card-desc {
  margin-top: 10px;
}
.listcard.mode-image {
  flex-direction: column;
}
.listcard.mode-image .card-img {
  width: 100%;
  height: 100px;
}
.listcard.mode-image .card-content {
  padding-left: 0;
}
.listcard.mode-image .card-content .card-title {
  margin: 10px 0;
}
.listcard.mode-image .card-content .card-desc {
  display: flex;
  align-items: center;
}


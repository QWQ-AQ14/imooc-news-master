.detail {
  padding: 15px 0;
  padding-bottom: 54px;
}
.detail .detail-title {
  padding: 0 15px;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.detail .detail-header {
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 10px;
  padding: 0 15px;
}
.detail .detail-header .detail-logo {
  flex-shrink: 0;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.detail .detail-header .detail-logo image {
  width: 100%;
  height: 100%;
}
.detail .detail-header .header-content {
  position: relative;
  width: 100%;
  padding-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 12px;
}
.detail .detail-header .header-content .author {
  font-size: 14px;
  color: #333;
}
.detail .detail-header .header-content .detail-info {
  color: #999;
}
.detail .detail-header .header-content .detail-info text {
  margin-right: 10px;
}
.detail .detail-header .header-btn {
  position: absolute;
  top: 0;
  right: 15px;
  flex-shrink: 0;
  width: 80px;
  height: 30px;
  font-size: 12px;
  color: #fff;
  background-color: #f07373;
}
.detail-content {
  margin-top: 20px;
  min-height: 500px;
}
.detail-content .detail-html {
  padding: 0 15px;
}
.detail-content .detail-comment {
  margin-top: 30px;
}
.detail-content .detail-comment .comment-title {
  padding: 10px 15px;
  font-size: 14px;
  color: #666;
  border-bottom: 1px solid #F5F5F5;
}
.detail-content .detail-comment .comment-content {
  padding: 0 15px;
  border-top: 1px solid #eee;
}
.detail-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  border-top: 1px #f5f5f5 solid;
  background-color: #fff;
  box-sizing: border-box;
}
.detail-bottom .bottom-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30px;
  width: 100%;
  border: 1px solid #ddd;
  padding: 0 10px;
  margin-left: 10px;
  border-radius: 5px;
}
.detail-bottom .bottom-input text {
  font-size: 14px;
  color: #999;
}
.detail-bottom .bottom-icons {
  display: flex;
  flex-shrink: 0;
  padding: 0 10px;
}
.detail-bottom .bottom-icons .icons-box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
}


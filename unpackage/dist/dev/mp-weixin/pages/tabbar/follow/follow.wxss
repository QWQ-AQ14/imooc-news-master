page {
  height: 100%;
  display: flex;
}
.follow {
  box-sizing: border-box;
  flex-direction: column;
  display: flex;
  flex: 1;
}
.follow .follow-tab {
  height: 30px;
  padding: 10px 20px;
  border-bottom: 1px solid #ccc;
}
.follow .follow-tab .tab-box {
  display: flex;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  border: 1px solid #f07373;
}
.follow .follow-tab .tab-box .tab-item {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 14px;
  width: 100%;
}
.follow .follow-tab .tab-box .tab-item:nth-child(1) {
  border-right: 1px solid #f07373;
}
.follow .follow-tab .tab-box .active {
  color: #f07373;
}
.follow .follow-list {
  flex: 1;
}
.follow .follow-list .follow-swiper {
  height: 100%;
}
.follow .follow-list .follow-swiper .swiper-item {
  height: 100%;
  overflow: hidden;
}
.follow .follow-list .follow-swiper .swiper-item .list-scroll {
  height: 100%;
}
.no-data {
  padding: 50px;
  font-size: 14px;
  color: #999;
  text-align: center;
}

